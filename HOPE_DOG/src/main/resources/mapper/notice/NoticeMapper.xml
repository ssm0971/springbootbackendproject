<!--    공지 글 목록페이지-->
    <select id="noticeList" resultType="NoticeListDTO">
        SELECT
            N.NOTICE_TITLE,
            N.NOTICE_REGIDATE,
            A.ADMIN_ID,
            N.NOTICE_NO
        FROM
            TBL_NOTICE N
                JOIN
            TBL_ADMIN A ON N.ADMIN_NO = A.ADMIN_NO
        ORDER BY
            N.NOTICE_REGIDATE DESC
    </select>
<!--    공지 글 상세페이지-->
    <select id="noticeView" resultType="NoticeViewDTO">
        SELECT
            N.NOTICE_NO,
            N.ADMIN_NO,
            N.NOTICE_CATE,
            N.NOTICE_TITLE,
            N.NOTICE_CONTENT,
            N.NOTICE_REGIDATE,
            N.NOTICE_UPDATEDATE,
            A.ADMIN_ID
        FROM
            TBL_NOTICE N
                JOIN
            TBL_ADMIN A ON N.ADMIN_NO = A.ADMIN_NO
        WHERE N.NOTICE_NO = #{noticeNo}
    </select>


    <!-- 여기서 부터 페이지네이션 관련 쿼리문-->
    <!-- 기부 전체게시글 수 -->
    <select id="selectTotal" resultType="int">
        SELECT COUNT(NOTICE_NO) FROM TBL_NOTICE
    </select>

    <!-- 기부 페이지마다 표시할 게시글-->
    <select id="selectAllPage" parameterType="Criteria" resultType="NoticeListDTO">
    <![CDATA[
        SELECT
            N.NOTICE_TITLE,
            N.NOTICE_REGIDATE,
            A.ADMIN_ID,
            N.NOTICE_NO
        FROM (
                 SELECT
                     NOTICE_NO,
                     NOTICE_TITLE,
                     NOTICE_REGIDATE,
                     ADMIN_NO,  -- ADMIN_NO를 추가합니다.
                     ROWNUM AS RNUM
                 FROM (
                          SELECT
                              N.NOTICE_NO,
                              N.NOTICE_TITLE,
                              N.NOTICE_REGIDATE,
                              N.ADMIN_NO  -- ADMIN_NO를 선택합니다.
                          FROM TBL_NOTICE N
                          ORDER BY N.NOTICE_REGIDATE DESC
                      )
                 WHERE ROWNUM <= #{page} * #{amount}
             ) N
                 JOIN TBL_ADMIN A ON N.ADMIN_NO = A.ADMIN_NO
        WHERE N.RNUM > (#{page} - 1) * #{amount}
        ]]>



    </select>
    <!-- 여기까지 페이지네이션+게시글목록불러오기 -->


